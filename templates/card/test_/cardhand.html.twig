{% extends "base.html.twig" %}
{% block body %}
<h1>Roll card hand</h1>

<p>You rolled {{ num_cards }} cards. Here is the value of the cards.</p>

<ul>
{% for roll in cardRoll %}
    <li>{{ roll }}</li>
{% endfor %}
</ul>

<p>Try to roll 
    <a href="{{ path('test_cardhand', {num: 5}) }}">5</a>
    or 
    <a href="{{ path('test_cardhand', {num: 10}) }}">10</a>
    cards.
</p>
{% endblock %}